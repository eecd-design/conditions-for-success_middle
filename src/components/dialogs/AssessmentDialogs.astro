---
import CreateEditAssessmentDialogs from "src/components/dialogs/CreateEditAssessmentDialogs.astro";
import AssessorDialogs from "src/components/dialogs/AssessorDialogs.astro";
import OpenImportAssessmentDialogs from "src/components/dialogs/OpenImportAssessmentDialogs.astro";
import ExportAssessmentDialogs from "src/components/dialogs/ExportAssessmentDialogs.astro";
import EditStatusDialogs from "src/components/dialogs/EditStatusDialogs.astro";
import Toast from "src/components/Toast.astro";
import IconWarningSmall from "src/components/icons/IconWarning_16.astro";
import IconCheckmark from "src/components/icons/IconCheckmark_12.astro";
---

<CreateEditAssessmentDialogs />
<AssessorDialogs />
<OpenImportAssessmentDialogs />
<ExportAssessmentDialogs />
<EditStatusDialogs />

<Toast
	id={"edit-assessment-properties-dialog_save-toast_success"}
	message={`Save successful!`}
	colour={"green"}
	type={"success"}
>
	<IconCheckmark slot={"icon"} />
</Toast>
<Toast
	id={"assessor-dialog_save-toast_success"}
	message={`Save successful!`}
	colour={"green"}
	type={"success"}
>
	<IconCheckmark slot={"icon"} />
</Toast>
<Toast
	id={"edit-status-dialog_change-status-toast_success"}
	message={`Save successful!`}
	colour={"green"}
	type={"success"}
>
	<IconCheckmark slot={"icon"} />
</Toast>
<Toast
	id={"edit-status-dialog_change-status-and-close-toast_success"}
	message={`Status change saved and assessment closed.`}
	colour={"green"}
	type={"success"}
>
	<IconCheckmark slot={"icon"} />
</Toast>
<Toast
	id={"export-warning-dialog_close-toast_success"}
	message={`Assessment closed.`}
	colour={"green"}
	type={"success"}
>
	<IconCheckmark slot={"icon"} />
</Toast>

<style is:global>
	dialog:not([data-context="setup"]) [data-restrict-context="setup"] {
		display: none !important;
	}
	dialog:not([data-context="configure"]) [data-restrict-context="configure"] {
		display: none !important;
	}
	dialog:not([data-context="close"]) [data-restrict-context="close"] {
		display: none !important;
	}
</style>
