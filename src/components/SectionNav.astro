---

const { url } = Astro;
let path = url.pathname;

---

<aside class="section-nav-container">
	<nav class="section">
		<h2>The Big Seven</h2>
		<ul>
			<li><a class={path === '/big-seven' ? 'active' : ''} href="/big-seven">Introduction</a></li>
			<li><a class={path === '/big-seven/leadership-and-teaming' ? 'active' : ''} href="/big-seven/leadership-and-teaming">Leadership and Teaming</a></li>
			<li><a class={path === '/big-seven/access-and-equity' ? 'active' : ''} href="/big-seven/access-and-equity">Access and Equity</a></li>
			<li><a class={path === '/big-seven/relationships' ? 'active' : ''} href="/big-seven/relationships">Relationships</a></li>
			<li><a class={path === '/big-seven/empathy' ? 'active' : ''} href="/big-seven/empathy">Empathy</a></li>
			<li><a class={path === '/big-seven/identities' ? 'active' : ''} href="/big-seven/identities">Identities</a></li>
			<li><a class={path === '/big-seven/high-yield-instructional-practices' ? 'active' : ''} href="/big-seven/high-yield-instructional-practices">High-yield Instructional Practices</a></li>
			<li><a class={path === '/big-seven/meaningful-learning-experiences' ? 'active' : ''} href="/big-seven/meaningful-learning-experiences">Meaningful Learning Experiences</a></li>
		</ul>
	</nav>
</aside>

<style is:global>

	nav.section h2 {
		font-size: 1.5rem;
		border-bottom: 1px solid var(--colour-border-neutral-subtle);
		padding: 0 0 0.5rem;
		margin: 0 0 1rem;
	}

	nav.section ul {
		display: flex;
		flex-flow: column;
		gap: 0.5rem;
		margin: 0;
		padding: 0;
		list-style-type: none;
	}

	nav.section ul ul {
		display: flex;
		flex-flow: column;
		gap: 0.5rem;
		margin-top: 0.5rem;
	}

	nav.section ul li {
		line-height: 1.2;
	}

	nav.section a {
		display: flex;
		align-items: center;
		text-decoration: none;
		padding: 0.625rem 1rem;
		font-size: 1rem;
		line-height: 1.2;
		border-radius: var(--border-radius-normal);
	}

	nav.section a:is(:hover, :focus-visible) {
		background-color: var(--colour-fill-neutral-subtle);
		color: var(--colour-ui-neutral);
	}
	
	nav.section a.active {
		outline: 2px solid var(--colour-border-neutral-subtle);
		outline-offset: -1px;
		pointer-events: none;
	}

	nav.section ul ul a {

	}

</style>